.main-box.feed.xepan-grid.xepan-communication-grid(id="{$_name}" class="{$class}")
    header.main-box-header.clearfix
    .main-box-body.clearfix
        ul.col-lg-12
            {rows}{row}
            {cols}  
            li.clearfix
                .text-small
                    | Communicated With
                    {$to}
                    .xepan-push
                    span.text-muted.text-small Title : 
                    span {$title}
                    .xepan-push
                    span.text-muted.text-small Description :
                    span {$description}
                br 
                span.text-muted.text-small Direction : 
                span {$direction}
                br 
                span.text-muted.text-small Date : 
                span {$date} 
                .comm-type
                    span.text-muted.text-small Medium :
                    span {$action}
            {/}
            {/}{/}
    {not_found}
    div.row
        .col-md-12.text-center.alert.alert-warning(role="alert")
            span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
    {/}
    {/}
    {$Paginator}
    style.
        .xepan-communication-grid .comm-type li{
        padding:1px;
        }