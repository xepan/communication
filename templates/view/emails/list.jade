div(id="{$_name}")
  .email-content-nano-content(tabindex='0', style='right: -13px;')
    ul#email-list
      {rows}{row}
      li.unread.clickable-row(data-id="{$id}")
        .chbox
          .checkbox-nice
            input(id='m-checkbox-{$id}' type='checkbox')
            label(for='m-checkbox-{$id}')
        .star
          a(data-id="{$id}" data-starred="{$is_starred}" class="{$starred}")
        .name(style='overflow:hidden') {communication_with}Mila Kunis{/}
        .message
          span.label.label-success Work
          span.subject {subject}Like your new movie -{/}&nbsp;
          span.body {body}Hi beauty, I watched your movies last night.{/}
        .meta-info
          a.attachment(href='#')
            i.fa.fa-paperclip
          span.date {callback_date}9:34 am{/}
      {/}{/}
  .nano-pane
    .nano-slider(style='height: 274px; transform: translate(0px, 0px);')