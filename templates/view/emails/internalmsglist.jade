div.internal-conversion-lister(id="{$_name}" class="{$class}" style="{$style}")
  .row
    .col-lg-12
      .main-box.clearfix
        //- header.main-box-header.clearfix
        //-   h2 Conversation
        {rows}{row}
        .conversation-item.clearfix(class="item-{$position}")
          .conversation-user
            {avatar}
            img(src='img/samples/kunis.png', alt='')
            {/}  
          .conversation-body
            a.name(class="{$unread}"  data-id="{$id}")
              | {from_name}Ryan Gossling{/} 
              small  {$subject}
              {trash_wrapper}
              a.table-link.danger.do-delete-conversion.pull-right(href="#" data-id="{$id}")
                span.fa-stack
                  i.fa.fa-square.fa-stack-2x
                  i.fa.fa-stack-1x.fa-inverse.fa-trash-o
              {/}
              br
            small.text-muted
              |To: {$to_name}
              br  
              |Cc: {$cc_name}  
            .time.hidden-xs
              | &nbsp;{callback_date}September 21, 2013 18:28{/}
            
            .text(data-id="{$id}" style="display:none")
              {message}
              | I don't think they tried to market it to the billionaire, spelunking,
              | base-jumping crowd.{/}
              br
              br  
              #email-attachments-content.msg-attachment
                {$Attachments}
        {/}{/}
        .xepan-push-large
        {$Paginator}
style.
  .form-control{
    border-color:#e7ebee!important;
  }
  .conversation-wrapper .conversation-body > .name{
    font-weight:100;
  }
  a.name{
    cursor:pointer;
  }
