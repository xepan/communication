div(id="{$_name}")
	link(rel="stylesheet" href="vender/xepan/base/templates/css/bootstrap.min.css")
	{$Content}
	{rows}{row}
	table
		tbody
			tr
				td(style="font-size:16px; ")
					strong|{$title}
				td(style="text-align:right; vertical-align:bottom")
					{$created_at}
			tr
				td
					{from_lister}
					span.small From: 
					{rows}{row} 
					span.small {$name} &nbsp;&nbsp;
					{/}{/}
					{/}
			tr
				td
					{to_lister}
					span.small To:
					{rows}{row} 
					span.small {$email}{$number} &nbsp; &nbsp;
					{/}{/}
					{/}
			tr
				td
					{cc_lister}
					span.small CC: 
					{rows}{row} 
					span.small {$email}{$number} &nbsp;&nbsp;
					{/}{/}
					{/}		
			.row
				.col-md-12
					{$body}		
					{/rows}{/row}