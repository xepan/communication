        {$form}
        .conversation-wrapper
          .conversation-content
            .slimScrollDiv(style='position: relative; overflow: hidden; width: auto; height: 352px;')
              .conversation-inner(style='overflow-y: scroll;overflow-x: hidden; width: auto; height: 352px;')
                {message_lister}Message Lister{/}

