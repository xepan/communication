#email-box.clearfix
  .col-lg-2
    #email-header-mobile.visible-xs.visible-sm.clearfix
      #email-header-title-mobile.pull-left
        i.fa.fa-inbox
        |  Inbox
      a.user-link(href='{url}?page=xepan_communication_composeemail{/}')
        a.btn.btn-success.email-compose-btn.pull-right()
          i.fa.fa-pencil-square-o
          |  Compose email
    header#email-header.clearfix
      #email-header-title.visible-md.visible-lg
        i.fa.fa-inbox
        |  Inbox
  .row
    .col-lg-12
      #email-navigation.email-nav-nano.hidden-xs.hidden-sm.has-scrollbar(style="margin-top:4% ")
        .email-nav-nano-content(tabindex='0', style='right: -13px;')
          a.btn.btn-success.email-compose-btn(href='{url}?page=xepan_communication_composeemail{/}')
            i.fa.fa-pencil-square-o
            |  Compose email
          {$email_navigation}
          {$email_labels}
        .nano-pane(style='display: none;')
          .nano-slider(style='height: 551px; transform: translate(0px, 0px);')
      {$email_lister}
      